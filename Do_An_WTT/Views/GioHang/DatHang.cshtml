@using Do_An_WTT.Models
@model List<GioHang>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_LayoutFishStore.cshtml";
}
<div style="margin: 100px 0; font-size: 25px;">
    <h2 style="text-align:center; margin: 0 0 30px 0;">Thông tin hàng hóa</h2>
    <table align="center" border="1" style="width: 60%;">
        <tr style="text-align: center; font-weight: bold">
            <td>
                Mã cá
            </td>
            <td>
                Tên cá
            </td>
            <td>
                Ảnh bìa
            </td>
            <td>
                Số lượng
            </td>
            <td>
                Đơn giá
            </td>
            <td>
                Thành tiền
            </td>
        </tr>
        @foreach(var item in Model) {
            <tr style="text-align: center; font-weight: bold">
                <td>
                    @item.iMaca
                </td>
                <td>
                    @item.sTenca
                </td>
                <td>
                    <img style="width:250px; margin: 20px 0;" src="~/Content/images/@item.sAnhbia">
                </td>
                <td>
                    @item.iSoluong
                </td>
                <td>
                    @String.Format("{0:0,0}", item.dDongia)
                </td>
                <td>
                    @String.Format("{0:0,0}", item.dThanhtien)
                </td>
            </tr>
        }
        <tr style="font-weight: bold; text-align: right; color: red; ">
            <td colspan="3">
                Số lượng cá: @ViewBag.Tongsoluong
            </td>
            <td colspan="3">
                Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ
            </td>
        </tr>
        <tr style="font-weight: bold; text-align: right;">
            <td colspan="6">
                @Html.ActionLink("TRỞ VỀ GIỎ HÀNG", "GioHang", "GioHang")
            </td>
        </tr>
    </table>
    <h2 style="text-align: center; margin-top: 70px; margin-bottom: 30px">THÔNG TIN ĐẶT HÀNG</h2>
    @{ 
        KHACHHANG kh = (KHACHHANG)Session["TaiKhoan"];
    }
    <table align="center" style="width: 30%">
        @using(Html.BeginForm()) {
            @Html.ValidationSummary(true)
            <tr style="height:70px">
                <td>Họ tên:</td>
                <td style="font-weight:bold">@kh.HoTen</td>
            </tr>
            <tr style="height:70px">
                <td>Địa chỉ:</td>
                <td style="font-weight:bold">@kh.DiaChiKH</td>
            </tr>
            <tr style="height:70px">
                <td>Điện thoại:</td>
                <td style="font-weight:bold">@kh.DienThoaiKH</td>
            </tr>
            <tr style="height:70px">
                <td>Ngày đặt:</td>
                <td style="font-weight:bold">@DateTime.Now.ToShortDateString()</td>
            </tr>
            <tr style="height:70px">
                <td>Ngày giao hàng:</td>
                <td style="font-weight:bold">
                    <input type="date" name="NgayGiao" />
                </td>
            </tr>
            <tr style="height:70px">
                <td style="font-weight:bold; text-align:center;" colspan="2">
                    <input type="submit" value="ĐỒNG Ý ĐẶT HÀNG" />
                </td>
            </tr>

        }
    </table>
</div>